---
import Layout from '../layouts/Layout.astro';
import PageHeaderText from "../components/PageHeaderText.astro";
import ToggleImage from "../components/ToggleImage.astro";
import Typography from "../components/Typography.astro";
---

<Layout
	title="About Me"
	description="Lorem ipsum dolor sit amet"
	pubDate={new Date('August 08 2021')}
	heroImage="/blog-placeholder-about.jpg"
>
	<PageHeaderText>
		BIOGRAPHY
	</PageHeaderText>
	<div class="flex gap-10">
		<ToggleImage />
		<div class="flex flex-col gap-3">
			<Typography className="mb-4">
				Sota Sugiura (a.k.a @sota1235)
			</Typography>
			<Typography className="text-xl">
				Software Engineer (Web, Security and Frontend)
			</Typography>
			<Typography className="text-xl">
				Working at <a href="https://10x.co.jp/" class="hover:text-black_hover underline">10X, inc.</a>
			</Typography>
		</div>
	</div>
</Layout>
