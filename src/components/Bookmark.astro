---
const { url, title, description, image } = Astro.props
---

<div
  class="bookmark-container flex items-center rounded-lg border border-gray-200 bg-white p-4 shadow-md"
>
  <div class="image-container mr-4 h-24 w-24">
    <img
      src={image}
      alt={title}
      class="h-full w-full rounded-md object-cover"
    />
  </div>
  <div class="content flex-1">
    <h3 class="mb-2 text-lg font-bold text-gray-900">{title}</h3>
    <p class="mb-3 text-sm text-gray-700">{description}</p>
    <a
      href={url}
      class="text-sm text-blue-600 hover:underline"
      target="_blank"
      rel="noopener noreferrer"
    >
      {url}
    </a>
  </div>
</div>
