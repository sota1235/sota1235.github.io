---
interface Props {
	date: Date;
  className?: string;
}

const { date, className } = Astro.props;
---

<time datetime={date.toISOString()} class={className}>
	{
    `${date.getFullYear()}.${(date.getMonth() + 1).toString().padStart(2, '0')}.${date.getDate().toString().padStart(2, '0')}`
	}
</time>
