---
import Layout from './Layout.astro'
import HeaderText from '../components/HeaderText.astro'
import type { CollectionEntry } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'

type Props = CollectionEntry<'blog'>

const { data, ...rest } = Astro.props
---

<Layout title={data.title} description={data.title}>
  <div class="mx-auto max-w-3xl">
    <div class="my-[30px] md:my-[60px]">
      <FormattedDate
        date={data.pubDate}
        className="text-2xl font-bold text-black"
      />
      <a href={`/blog/${rest.slug}`}>
        <HeaderText className="text-3xl hover:text-black_hover md:text-4xl"
          >{data.title}</HeaderText
        >
      </a>
    </div>
    <article
      class="prose prose-sm mb-[200px] max-w-none list-inside md:prose-base"
    >
      <slot />
    </article>
  </div>
</Layout>
